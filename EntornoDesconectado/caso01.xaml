<Window x:Class="EntornoDesconectado.caso01"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EntornoDesconectado"
        mc:Ignorable="d"
        Title="caso01" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label>Lista de los Años de Países</Label>
                <ComboBox x:Name="cboAnio" Width="130px" SelectionChanged="CboAnios_SelectionChanged"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
